@model Capstone1.Models.Disease

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Disease</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DiseaseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiseaseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Symptoms)
        </dt>

        <dd>
            <ul>
                @foreach (var Symptom in Model.Symptoms)
                {
                    <li>@Symptom.SymptomName</li>
                }
            </ul>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DoctorTypes)
        </dt>

        <dd>
            <ul>
                @foreach (var Doctor in Model.DoctorTypes)
                {
                    <li>@Doctor.TypeName</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Edit Symptoms", "EditSymptoms", new { id = Model.Id})
</p>
